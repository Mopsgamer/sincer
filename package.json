{
	"name": "sincer",
	"version": "0.0.1",
	"description": "Terminal client for time monitoring.",
	"types": "./types/index.d.ts",
	"main": "./lib/index.js",
	"engines": {
		"node": ">=14"
	},
	"bin": {
		"sincer": "./bin/sincer.js"
	},
	"scripts": {
		"start": "node .",
		"test": "npx mocha ./test",
		"pretest": "npm run build",
		"prestart": "npm run build",
		"prepublish": "npm run build",
		"build": "npx esbuild ./src/cli.js --bundle --packages=external --outfile=./bin/sincer.js --target=node14 & npx esbuild ./src/index.js --outfile=./lib/index.js --target=node14"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Mopsgamer/sincer.git"
	},
	"keywords": [
		"time-since",
		"cli",
		"node",
		"npm"
	],
	"author": "Mopsgamer",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Mopsgamer/sincer/issues"
	},
	"homepage": "https://github.com/Mopsgamer/sincer#readme",
	"dependencies": {
		"chalk": "^5.3.0",
		"commander": "^12.0.0",
		"is-dict": "^0.0.2",
		"merge": "^2.1.1",
		"picomatch": "^4.0.2",
		"pretty-ms": "^9.0.0",
		"yaml": "^2.4.1"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^14.0.0",
		"chai": "^5.1.0",
		"esbuild": "^0.20.2",
		"mocha": "^10.4.0"
	}
}
